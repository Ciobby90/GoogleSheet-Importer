<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="204.0" prefWidth="352.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CreateAccount.CreateController">
   <center>
      <HBox prefHeight="225.0" prefWidth="425.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="225.0" prefWidth="123.0" spacing="18.0">
               <children>
                  <Label text="Mail:" />
                  <Label layoutX="10.0" layoutY="10.0" text="Password" />
                  <Label layoutX="10.0" layoutY="27.0" text="Repeat Password" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="190.0" spacing="10.0">
               <children>
                  <TextField fx:id="mail" promptText="your gmail adress" />
                  <PasswordField fx:id="password" promptText="Password" />
                  <PasswordField fx:id="repeatPassword" layoutX="10.0" layoutY="88.0" promptText="Repeat Password" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="58.0" prefWidth="352.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#createAccount" prefHeight="25.0" prefWidth="126.0" text="Create Account" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
